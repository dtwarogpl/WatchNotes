@model  WatchNotes.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" style ="
                                         display: flex;
                                         flex-direction: column;
                                         gap: 10px;
                                     ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
            <span class="text-danger">
                @ViewBag.Message
            </span>
            }
            @Html.HiddenFor(x => x.ReturnUrl)
            <div class="form-group">
                <input asp-for="UserName" class="form-control" style="height: 50px;" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password"  style="height: 50px;" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Login" style="height: 50px; width:100%;"  class="btn btn-default" />
            </div>
        </form>
    </div>
</div>